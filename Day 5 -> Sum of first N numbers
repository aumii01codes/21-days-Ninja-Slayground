import java.util.*;
public class Solution{
    public static int sumFirstN(int n){
        int s=0;
        for(int i=1; i<=n; i++){
            s += i;
        }
        return s;
    }

    public static void main(String[] args) {
        Scanner read= new Scanner(System.in);
        int x= read.nextInt();
        read.close();
        int sum= sumFirstN(x);
        System.out.println(sum);
    }
}
